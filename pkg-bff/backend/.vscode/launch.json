  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Jest Current Unit Test",
      "program": "${workspaceFolder}\\node_modules\\jest\\bin\\jest.js",
      "args": ["${relativeFile}", "--config", "${workspaceFolder}\\jest.json", "--runInBand", "--no-cache", "--detectOpenHandles", "--bail"],
      "runtimeArgs": ["--inspect-brk"],
      "cwd": "${workspaceRoot}",
      "protocol": "inspector",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    }
  ]
}
